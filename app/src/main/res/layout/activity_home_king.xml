<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".fragment.home.HomeGuessActivity">

    <include layout="@layout/title_layout_1"/>

    <RelativeLayout
        android:id="@+id/rl_king_live"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        android:background="@mipmap/king_direct_layout">

        <TextView
            android:id="@+id/tv_king_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王者直播"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_king_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直观大神骚操作，世界杯模式，好玩到爆"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/tv_king_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_record"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:background="@mipmap/record_layout">

        <TextView
            android:id="@+id/tv_trumpet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录播回放"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_trumpet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停留竞猜瞬间"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/tv_trumpet_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_free_confrontation"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:background="@mipmap/free_confront_layout">

        <TextView
            android:id="@+id/tv_free_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自由对抗"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_free_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友solo，不服单挑"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/tv_free_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>