<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    tools:context=".fragment.my.MyIntegralActivity">

    <include layout="@layout/title_layout_1"/>
    
    <ImageView
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:src="@mipmap/integral"
        android:scaleType="fitXY"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1565"
        android:textSize="24sp"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:background="@color/color_f0f0f0"
        android:text="积分明细"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:textColor="@color/color_333333"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_toRightOf="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全名抢答初级场押注"
                android:textSize="11sp"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/tv_bet_time"
                android:layout_toRightOf="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.03.24 10:20"
                android:textSize="11sp"
                android:textColor="@color/color_999999"
                android:layout_marginLeft="14dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_bet_total"
            android:layout_toRightOf="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-100"
            android:textSize="11sp"
            android:textColor="@color/color_333333"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_toRightOf="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textSize="11sp"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/tv_recharge_time"
                android:layout_toRightOf="@+id/iv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.03.24 10:20"
                android:textSize="11sp"
                android:textColor="@color/color_999999"
                android:layout_marginLeft="14dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_recharge_total"
            android:layout_toRightOf="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1000"
            android:textSize="11sp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f0f0f0"/>

</LinearLayout>